#!/bin/bash
# Credit HopingBoys

echo "Credit Goes To HopingBoys"

echo "Panel Installation Started"

# Step 1: sudo su

sudo su

# Step 2: Installing Some Files

git clone https://github.com/dragonlabsdev/v2panel

echo "Files Installation Complete ✅"

# Step 3: Installing Node.Js

curl -sL https://deb.nodesource.com/setup_23.x | sudo bash -
apt-get install nodejs git

echo "Node.Js Installation Complete ✅"

# Step 4: Panel Directory

cd v2panel

# Step 5: Unziping Files

apt install zip -y && unzip panel.zip && cd panel

# Step 6: Creating User For Admin Account

npm install && npm run seed && npm run createUser

# Step 7: Updating And Upgrading Files

apt update
apt upgrade

# Step 8: Starting

node .
